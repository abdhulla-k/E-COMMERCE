<%- include( "../includes/head.ejs" ) %>
<body>
    <!-- header -->
    <%- include( "../includes/admin/admin-navigation.ejs" ) %>
    <!-- /header -->

    <!-- Carousel Start -->
    <div class="container-fluid mb-3">
        <div class="row px-xl-5">
              <%- include("../includes/admin/admin-sidebar.ejs") %>

              <div class="col-lg-9 col-md-9">
                <h4 class="section-title position-relative text-uppercase mb-3">
                  <span class="bg-secondary pr-3">Add New Coupon</span>
                </h4>
                <div>
                    <% if(message) { %>
                        <div class="alert alert-danger" role="alert">
                            <%= message %>
                        </div>
                    <% } %>
                    <div 
                        id="login-row" 
                        class="row justify-content-center align-items-center"
                        >
                        <div 
                            id="login-column" 
                            class="col-md-6">
                                <div 
                                    id="login-box" 
                                    class="col-md-12">
                                        <form 
                                            id="login-form" 
                                            class="form" 
                                            action="/shope/admin/addNewCoupon" 
                                            method="post">
                                            <div class="form-group">
                                                <label 
                                                    for="email" 
                                                    class="text-dark">
                                                        New Coupon:
                                                </label>
                                                <br>
                                                <input 
                                                    type="text" 
                                                    name="couponName" 
                                                    id="email" 
                                                    class="form-control"
                                                    required
                                                >
                                            </div>
                                            <div class="form-group">
                                                <label 
                                                    for="email" 
                                                    class="text-dark">
                                                        Discount Percentage:
                                                </label>
                                                <br>
                                                <input 
                                                    type="text" 
                                                    name="percentage" 
                                                    id="percentage" 
                                                    class="form-control"
                                                    required
                                                >
                                            </div>
                                            <div class="form-group">
                                                <label 
                                                    for="email" 
                                                    class="text-dark">
                                                        Maximom Discount:
                                                </label>
                                                <br>
                                                <input 
                                                    type="text" 
                                                    name="maxDiscount" 
                                                    id="email" 
                                                    class="form-control"
                                                    required
                                                >
                                            </div>
                                            <div class="form-group">
                                                <label 
                                                    for="email" 
                                                    class="text-dark">
                                                        Minimum Amount:
                                                </label>
                                                <br>
                                                <input 
                                                    type="text" 
                                                    name="maxAmount" 
                                                    id="email" 
                                                    class="form-control"
                                                    required
                                                >
                                            </div>

                                            <div class="form-group">
                                                <input 
                                                    type="submit" 
                                                    name="submit" 
                                                    class="btn btn-warning btn-md" 
                                                    value="submit"
                                                >
                                            </div>
                                        </form>
                                </div>
                        </div>
                    </div>
                </div>
              </div>
        </div>
    </div>
    <!-- Carousel End -->
    <%- include( "../includes/footer.ejs" ) %>
    
<%- include( "../includes/end.ejs" )%>