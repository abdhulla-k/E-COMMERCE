<%- include( "../includes/head.ejs" ) %>
<body>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- header -->
    <%- include( "../includes/admin/admin-navigation.ejs" ) %>
    <!-- /header -->

    <!-- Carousel Start -->
    <div class="container-fluid mb-3">
        <div class="row px-xl-5">
              <%- include("../includes/admin/admin-sidebar.ejs") %>

              <div class="col-lg-9 col-md-9">
                <h4 class="section-title position-relative text-uppercase mb-3">
                  <span class="bg-secondary pr-3">Coupons</span><a href="/admin/showAddCoupon" class="btn btn-warning">Add Coupon</a>
                </h4>
                <div>
                    <% if(coupons.length > 0) { %>
                        <div class="card-body">
                            <div class="row border border-success">
                              <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                <p class="text-muted mb-0">Coupon</p>
                              </div>
                              <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                Discount %
                              </div>
                              <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                Max Discount
                              </div>
                              <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                Min Amount
                              </div>
                              <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                Remove Coupon
                              </div>
                            </div>
                          </div>
                        <% coupons.forEach(coupon => { %>
                            <div class="card-body" id="<%= coupon.id %>">
                                <div class="row border">
                                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                    <p class="text-muted mb-0"><%= coupon.coupon %></p>
                                  </div>
                                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                    <p class="text-muted mb-0 small"><%= coupon.discountPercentage %></p>
                                  </div>
                                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                    <p class="text-muted mb-0 small"><%= coupon.maxDiscount %></p>
                                  </div>
                                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                    <p class="text-muted mb-0 small"><%= coupon.minAmount %></p>
                                  </div>
                                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                    <a 
                                        class="btn btn-sm btn-danger"
                                        id=""
                                        onclick="removeCoupon('<%= coupon.id %>')"
                                        >
                                        <i class="fa fa-times"></i>
                                    </a>
                                  </div>
                                </div>
                              </div>
                        <% }) %>
                    <% } else { %>
                        <h3>No coupons exist! add new coupon</h3>
                    <% } %>
                    
                </div>
              </div>
        </div>
    </div>
    <script>
        function removeCoupon(id) {
            const row = document.getElementById(id)
            Swal.fire({
              title: 'Are you sure?',
              text: "You won't be able to revert this!",
              icon: 'warning',
              showCancelButton: true,
              confirmButtonColor: '#3085d6',
              cancelButtonColor: '#d33',
              confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
              if (result.isConfirmed) {
                Swal.fire(
                  'Deleted!',
                  'Your file has been deleted.',
                  'success'
                ).then(data => {
                  $.ajax({
                        url: `/admin/deleteCoupon/${id}`,
                        success(status) {
                            row.remove();
                        }
                    })
                })
              }
            })
        }
    </script>
    <!-- Carousel End -->
    <%- include( "../includes/footer.ejs" ) %>
    
<%- include( "../includes/end.ejs" )%>