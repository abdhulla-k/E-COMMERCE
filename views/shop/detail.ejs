
  <%- include( "../includes/head.ejs" ) %>
<body>
    <!-- header -->
    <%- include( "../includes/navigation.ejs" ) %>
    <!-- /header -->
    
    <!-- Product Detail Start -->
    <div class="container-fluid pb-5">
      <div class="row px-xl-5">

        <!-- product image -->
        <div class="col-lg-5 mb-30">
          <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img style="max-height: 755px;" class="d-block w-100" src="/images/<%=productDetails.images[0]%>" alt="First slide">
              </div>
              <div class="carousel-item">
                <img style="max-height: 755px;" class="d-block w-100" src="/images/<%=productDetails.images[1]%>" alt="Second slide">
              </div>
              <div class="carousel-item">
                <img style="max-height: 755px;" class="d-block w-100" src="/images/<%=productDetails.images[2]%>" alt="Third slide">
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
        <!-- /product image -->

        <!-- product details all buttons -->
        <div class="col-lg-7 h-auto mb-30">
          <div class="h-100 bg-light p-30">
            <h3><%= productDetails.title %></h3>

            <!-- rating -->
            <div class="d-flex mb-3">
              <div class="text-primary mr-2">
                <small class="fas fa-star"></small>
                <small class="fas fa-star"></small>
                <small class="fas fa-star"></small>
                <small class="fas fa-star-half-alt"></small>
                <small class="far fa-star"></small>
              </div>
              <small class="pt-1">(99 Reviews)</small>
            </div>
            <!-- /rating -->

            <h3 class="font-weight-semi-bold mb-4">$<%= productDetails.price %></h3>
            <p class="mb-4">
              <%= productDetails.description %>
            </p>
            <div class="d-flex align-items-center mb-4 pt-2">
              <% if(userType === 'user') { %>
                <!-- add to cart button and form -->
                <form action="/user/addToCart" method="post" class="d-flex my-2">

                  <!-- counting button -->
                  <div class="input-group quantity mr-3" style="width: 130px">
                    <div class="input-group-btn">
                      <a class="btn btn-primary btn-minus" id="decrease" onclick="decreaseValue()">
                        <i class="fa fa-minus"></i>
                      </a>
                    </div>
                    <input
                      type="text" 
                      id="number" 
                      name="quantity"
                      class="form-control bg-secondary border-0 text-center"
                      value="1"
                    />
                    <div class="input-group-btn">
                      <a class="btn btn-primary btn-plus" onclick="increaseValue()" id="increase">
                        <i class="fa fa-plus"></i>
                      </a>
                    </div>
                  </div>
                  <!-- /counting button -->

                  <!-- product id -->
                  <input 
                    value="<%= productDetails.id %>" 
                    type="text" 
                    name="id" 
                    hidden
                    >
                  
                  <!-- product price -->
                  <input 
                    type="text" 
                    value="<%= productDetails.price %>" 
                    name="price" 
                    hidden
                    >
                  <button 
                    style="margin-left: 5px;" 
                    type="submit" 
                    class="row btn btn-primary px-3">
                      <i class="fa fa-shopping-cart mr-1"></i> Add To Cart
                  </button>
                </form>
                <!-- /add to cart button and form -->
              <% } %>

              <!-- edit and delete buttons -->
              <% if(userType === 'seller') { %>
                <a 
                  href="/seller/edit/<%= productDetails.id %>" 
                  style="margin: 0px 5px 0px 0px;" 
                  class="btn btn-primary px-3">
                    Edit
                </a>
                <a 
                  href="/seller/delete/<%= productDetails.id %>" 
                  style="margin: 0px 5px 0px 5px;" 
                  class="btn btn-danger px-3">
                    Delete
                </a>
              <% } %>
              <!-- /edit and delete buttons -->
            </div>

            <!-- share icons -->
            <div class="d-flex pt-2">
              <strong class="text-dark mr-2">Share on:</strong>
              <div class="d-inline-flex">
                <a class="text-dark px-2" href="">
                  <i class="fab fa-facebook-f"></i>
                </a>
                <a class="text-dark px-2" href="">
                  <i class="fab fa-twitter"></i>
                </a>
                <a class="text-dark px-2" href="">
                  <i class="fab fa-linkedin-in"></i>
                </a>
                <a class="text-dark px-2" href="">
                  <i class="fab fa-pinterest"></i>
                </a>
              </div>
            </div>
            <!-- /share icons -->
          </div>
        </div>
        <!-- /product details all buttons -->
      </div>
    </div>
    <!-- /Product Detail End -->

    <!-- script of product quantity buttons -->
    <script>
      function increaseValue() {
        var value = parseInt(document.getElementById('number').value, 10);
        value = isNaN(value) ? 0 : value;
        value++;
        document.getElementById('number').value = value;
      }

      function decreaseValue() {
        var value = parseInt(document.getElementById('number').value, 10);
        value = isNaN(value) ? 0 : value;
        value < 1 ? value = 1 : '';
        value--;
        document.getElementById('number').value = value;
      }
    </script>
    <!-- /script of product quantity buttons -->
    <%- include( "../includes/footer.ejs" ) %>
<%- include( "../includes/end.ejs" )%>
