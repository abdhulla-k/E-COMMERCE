<body>
    <!-- header -->
    <%- include( "../includes/navigation.ejs" ) %>
    <!-- /header -->

    <!-- Product detais -->
    <div class="container-fluid mb-3">
        <div class="row px-xl-5">
              <%- include("../includes/user/user-sidebar.ejs") %>

              <div class="col-lg-9 col-md-9">
                <h5 class="section-title position-relative text-uppercase mb-3">
                  <span class="bg-secondary pr-3">Order Details</span>
                </h5>
                <div class="row px-xl-5">
                  <div class="card" style="width: 100%;">
                    <div class="card-body">
                      <h5 class="card-title">Total Price: <%= orderDetails.price %></h5>
                      <a 
                        href="/user/cancelOrder/<%= orderDetails.id %>" 
                        class="btn btn-primary">
                          Cancel order
                      </a>
                      <a 
                        onclick="showInvoice()" 
                        class="btn btn-primary"
                        id="details-togle">
                          Get Invoice
                      </a>
                    </div>
                  </div>
                  <div style="width: 100%;" id="details-ctr">
                    <% let discount = 0 %>
                    <% for(i of products) { %>
                      <% for(k of orderDetails.products) { %>
                          <% if(i.id === k.productId) { %>
                              <div style="width: 100%;" class="details-ctr card shadow-0 border  mb-4 ">
                                  <div class="card-body">
                                    <div class="row">
                                      <div class="col-md-2">
                                        <img src="/images/<%=i.images[0]%>"
                                          class="img-fluid" alt="Phone">
                                      </div>
                                      <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0"><%= i.title %></p>
                                      </div>
                                      <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small"></p>
                                      </div>
                                      <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small">Product Price: <%= i.price %></p>
                                      </div>
                                      <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small">Qty: <%= k.quantity %></p>
                                      </div>
                                      <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small">Total Price: <%= k.price %></p>
                                        <% discount += Number(k.price) %>
                                      </div>
                                      <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                          <a
                                          class="btn btn-outline-warning btn-square text-dark"
                                          href="/detail/<%= i.id %>"
                                          >info</a>
                                      </div>
                                    </div>
                                    <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                                    <div class="row d-flex align-items-center">
                                      <div class="col-md-2">
                                        <p class="text-muted mb-0 small">Track Order</p>
                                      </div>
                                      <div class="col-md-10">
                                        <div class="progress" style="height: 6px; border-radius: 16px;">
                                          <div class="progress-bar" role="progressbar"
                                            style="width: '<% if(k.status === 'pending') { %> 0% <% } %> <% if(k.status === 'placed') { %> 5% <% } %> <% if(k.status === 'shipped') { %> 50% <% } %> <% if(k.status === 'delivered') { %> 100% <% } %>'; border-radius: 16px; background-color: rgb(255, 230, 0);" aria-valuenow="65"
                                            aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                        <div class="d-flex justify-content-around mb-1">
                                          <p class="text-muted mt-1 mb-0 small ms-xl-5">Out for delivary</p>
                                          <p class="text-muted mt-1 mb-0 small ms-xl-5">Delivered</p>
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                          <% } %>
                      <% } %>
                    <% } %>
                  </div>

                  <!-- invoice -->
                  <div class="hide" id="invoice-ctr" style="width: 100%;">
                    <table class="body-wrap">
                      <tbody>
                        <tr>
                          <td></td>
                          <td>
                              <div>
                                  <table class="main" width="100%" cellpadding="0" cellspacing="0">
                                      <tbody><tr>
                                          <td class="content-wrap aligncenter">
                                              <table width="100%" cellpadding="0" cellspacing="0">
                                                  <tbody>
                                                    <tr>
                                                      <td class="content-block" style="text-align: center;">
                                                          <h2>Thanks for using Big Cart</h2>
                                                      </td>
                                                    </tr>
                                                  <tr>
                                                      <td class="content-block">
                                                          <table class="invoice">
                                                              <tbody>
                                                                <tr>
                                                                  <!-- <td>Anna Smith<br>Invoice #12345<br>June 01 2015</td> -->
                                                                </tr>
                                                              <tr>
                                                                  <td>
                                                                      <table class="invoice-items" cellpadding="0" cellspacing="0">
                                                                          <tbody>
                                                                            <% for(i of products) { %>
                                                                              <% for(k of orderDetails.products) { %>
                                                                                  <% if(i.id === k.productId) { %>
                                                                                    <tr>
                                                                                      <td><%= i.title %></td>
                                                                                      <td class="alignright"><%= i.price * k.quantity %></td>
                                                                                    </tr>
                                                                                  <% } %>
                                                                              <% } %>
                                                                            <% } %>
                                                                            <tr class="total">
                                                                              <td class="alignright" width="80%">Discount</td>
                                                                              <td class="alignright">$ <%= parseInt(discount - orderDetails.price) %></td>
                                                                            </tr>
                                                                            <tr class="total">
                                                                              <td class="alignright" width="80%">Total</td>
                                                                              <td class="alignright">$ <%= orderDetails.price %></td>
                                                                            </tr>
                                                                      </tbody></table>
                                                                  </td>
                                                              </tr>
                                                          </tbody></table>
                                                      </td>
                                                  </tr>
                                              </tbody>
                                            </table>
                                          </td>
                                      </tr>
                                  </tbody>
                                </table>
                          </td>
                          <td></td>
                      </tr>
                    </tbody>
                    </table>
                    <div style="color: blue; width: 100%; text-align: right;">
                      <a 
                        href="/user/downloadInvoice"
                        style="color: blue; cursor: pointer;"
                        id="download-invoice">
                          Download Invoice
                      </a>
                    </div>
                  </div>
                </div>

                
                <!-- /invoice -->
                
              </div>
        </div>
    </div>
    <!-- /Procut details -->
    <script>
      function showInvoice() {
        let txt = document.getElementById('details-togle').innerText
        console.log(txt);
        if(txt == "Get Invoice") {
          document.getElementById('invoice-ctr').classList.remove('hide');
          document.getElementById('details-ctr').classList.add('hide');
          document.getElementById('details-togle').innerText = "Details";
        } else {
          document.getElementById('invoice-ctr').classList.add('hide');
          document.getElementById('details-ctr').classList.remove('hide');
          // document.getElementById('download-invoice').classList.remove('hide');
          document.getElementById('details-togle').innerText = "Get Invoice";
        }
      }
    </script>
